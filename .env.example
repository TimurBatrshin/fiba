# API Configuration
# URL for the API server
REACT_APP_API_URL=http://localhost:9090/api

# App Settings
# Environment: development, test, production
NODE_ENV=development
# Application version
VERSION=1.0.0

# JWT Authentication
# Secret key used for JWT token generation (use a strong random value in production)
JWT_SECRET=change_this_to_a_secure_random_value
# Token expiration time in seconds (86400 = 24 hours)
JWT_EXPIRATION=86400

# Database Settings
# PostgreSQL database connection parameters
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password
DB_NAME=fiba_db

# Mail Service
# SMTP server configuration for sending emails
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=your_email@example.com
MAIL_PASSWORD=your_email_password
MAIL_FROM=noreply@fiba-tournaments.com

# File Storage
# Directory for uploaded files (relative to project root or absolute path)
FILE_UPLOAD_DIR=./uploads

# Frontend URL
# URL where the frontend application is served
FRONTEND_URL=http://localhost:8099

# CORS Settings
# Comma-separated list of origins allowed to access the API
CORS_ALLOWED_ORIGINS=http://localhost:8099,http://localhost:9090

# Logging
# Log level: error, warn, info, debug
LOG_LEVEL=info 